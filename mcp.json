{
  "mcpServers": {
    "trmnl": {
      "type": "stdio",
      "command": "node",
      "args": ["${HOME}/claudesync/servers/trmnl/dist/index.js"],
      "env": {
        "TRMNL_API_KEY": "${TRMNL_API_KEY}"
      }
    },
    "SuperThings": {
      "type": "stdio",
      "command": "node",
      "args": ["${HOME}/claudesync/servers/super-things/dist/index.js"],
      "env": {
        "THINGS_AUTH_TOKEN": "${THINGS_AUTH_TOKEN}"
      }
    },
    "playwright": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@playwright/mcp@latest"]
    },
    "hunter": {
      "type": "sse",
      "url": "https://mcp.hunter.io/sse",
      "headers": {
        "X-API-KEY": "${HUNTER_API_KEY}"
      }
    },
    "ahrefs": {
      "type": "http",
      "url": "https://api.ahrefs.com/mcp/mcp"
    },
    "browserbase": {
      "type": "http",
      "url": "https://server.smithery.ai/@browserbasehq/mcp-browserbase/mcp"
    },
    "updike-social-api": {
      "type": "stdio",
      "command": "npx",
      "args": ["tsx", "${HOME}/claudesync/servers/updike-social-api/src/index.ts"],
      "env": {}
    },
    "updike-image-gen": {
      "type": "stdio",
      "command": "npx",
      "args": ["tsx", "${HOME}/claudesync/servers/updike-image-gen/src/index.ts"],
      "env": {
        "GEMINI_API_KEY": "${GEMINI_API_KEY}"
      }
    },
    "updike-audio-gen": {
      "type": "stdio",
      "command": "npx",
      "args": ["tsx", "${HOME}/claudesync/servers/updike-audio-gen/src/index.ts"],
      "env": {}
    },
    "updike-content-archive": {
      "type": "stdio",
      "command": "npx",
      "args": ["tsx", "${HOME}/claudesync/servers/updike-content-archive/src/index.ts"],
      "env": {
        "PINECONE_API_KEY": "${PINECONE_API_KEY}",
        "ANTHROPIC_API_KEY": "${ANTHROPIC_API_KEY}"
      }
    },
    "updike-webflow": {
      "type": "stdio",
      "command": "node",
      "args": ["${HOME}/claudesync/servers/updike-webflow/dist/index.js"],
      "env": {}
    },
    "gmail": {
      "type": "stdio",
      "command": "uvx",
      "args": ["mcp-email-server@latest", "stdio"],
      "env": {
        "MCP_EMAIL_SERVER_ACCOUNT_NAME": "gmail",
        "MCP_EMAIL_SERVER_FULL_NAME": "${GMAIL_FULL_NAME}",
        "MCP_EMAIL_SERVER_EMAIL_ADDRESS": "${GMAIL_EMAIL_ADDRESS}",
        "MCP_EMAIL_SERVER_USER_NAME": "${GMAIL_EMAIL_ADDRESS}",
        "MCP_EMAIL_SERVER_PASSWORD": "${GMAIL_APP_PASSWORD}",
        "MCP_EMAIL_SERVER_IMAP_HOST": "imap.gmail.com",
        "MCP_EMAIL_SERVER_IMAP_PORT": "993",
        "MCP_EMAIL_SERVER_SMTP_HOST": "smtp.gmail.com",
        "MCP_EMAIL_SERVER_SMTP_PORT": "465"
      }
    }
  }
}
